@model Lab5.Models.DataAccess.AcademicRecord

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AcademicRecord</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <input type="hidden" asp-for="CourseCode" />
                <input type="hidden" asp-for="StudentId" />
                <label>Course</label>
                @ViewData["CourseCode"]

                @ViewData["CourseTitle"]
                <div>
                    <label>Student</label>
                    @ViewData["StudentId"]

                    @ViewData["StudentName"]
                </div>
                <div>
                    <label asp-for="Grade" class="control-label"></label>
                    <input asp-for="Grade" class="form-control" />
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
